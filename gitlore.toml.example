[models]
classifier = "openrouter/deepseek/deepseek-chat"     # cheap/fast tier
synthesizer = "openrouter/anthropic/claude-opus-4-6"  # SOTA tier
embedding = "local/nomic-embed-text-v1.5"

[analysis]
since_months = 12
half_life_days = 180
min_coupling_confidence = 0.25
min_coupling_lift = 1.5
max_files_per_commit = 50

[github]
# token from GITHUB_TOKEN env or `gh auth token`
owner = "myorg"
repo = "myproject"

[output]
formats = ["claude_md", "agents_md"]
